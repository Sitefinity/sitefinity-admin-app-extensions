; Top-most EditorConfig file
root = true

; 4-column space indentation
[*]
indent_size = 4
indent_style = space
insert_final_newline = true
trim_trailing_whitespace = true

[*.md]
indent_size = 4
indent_style = space
trim_trailing_whitespace = false

[*.json]
indent_size = 2
indent_style = space
trim_trailing_whitespace = false

[*.min.*]
max_line_length = off
indent_style = ignore
trim_trailing_whitespace = false
insert_final_newline = ignore
