{
    "rules": {
        "adjacent-overload-signatures": true,
        "align": [
            true,
            "parameters"
        ],
        "ban": [
            true,
            "fdescribe",
            "fit",
            {
                "name": [
                    "Observable",
                    "fromPromise"
                ],
                "message": "Use from() method from 'rxjs' namespace"
            },
            {
                "name": [
                    "Observable",
                    "fromEvent"
                ],
                "message": "Use fromEvent() method from 'rxjs' namespace"
            },
            {
                "name": [
                    "Observable",
                    "throw"
                ],
                "message": "use throwError() from 'rxjs' namespace"
            }
        ],
        "import-blacklist": [
            true,
            "rxjs/Observable",
            "rxjs/Subject",
            "rxjs/BehaviorSubject",
            "rxjs/ReplaySubject"
        ],
        "class-name": true,
        "comment-format": [
            "check-space",
            true
        ],
        "component-class-suffix": true,
        "component-selector": [
            true,
            "element",
            "sf",
            "kebab-case"
        ],
        "cyclomatic-complexity": [
            true,
            20
        ],
        "directive-class-suffix": true,
        "directive-selector": [
            true,
            "attribute",
            "sf",
            "camelCase"
        ],
        "forin": true,
        "import-destructuring-spacing": true,
        "indent": [
            true,
            "spaces"
        ],
        "interface-name": [
            true,
            "never-prefix"
        ],
        "label-position": true,
        "member-access": false,
        "member-ordering": [
            true,
            "public-before-private",
            "variables-before-functions"
        ],
        "new-parens": true,
        "no-any": false,
        "no-arg": true,
        "no-attribute-parameter-decorator": true,
        "no-bitwise": false,
        "no-console": [
            true,
            "debug",
            "error",
            "info",
            "log",
            "time",
            "timeEnd",
            "trace",
            "warn"
        ],
        "no-construct": true,
        "no-conditional-assignment": true,
        "no-consecutive-blank-lines": true,
        "no-debugger": true,
        "no-duplicate-variable": true,
        "no-eval": true,
        "no-extra-semi": true,
        "no-inner-declarations": [
            true,
            "both"
        ],
        "no-input-rename": true,
        "no-internal-module": true,
        "no-irregular-whitespace": false,
        "no-output-rename": true,
        "no-trailing-whitespace": true,
        "no-unnecessary-initializer": true,
        "no-unused-expression": true,
        "no-use-before-declare": false,
        "no-var-keyword": true,
        "one-line": [
            true,
            "check-catch",
            "check-else",
            "check-open-brace",
            "check-whitespace"
        ],
        "one-variable-per-declaration": true,
        "pipe-naming": [
            true,
            "camelCase",
            "sf"
        ],
        "prefer-const": true,
        "quotemark": [
            true,
            "double"
        ],
        "semicolon": [
            true,
            "always",
            "ignore-interfaces"
        ],
        "trailing-comma": [
            true,
            {
                "multiline": "never",
                "singleline": "never"
            }
        ],
        "triple-equals": [
            true,
            "allow-null-check"
        ],
        "typedef-whitespace": [
            true,
            {
                "call-signature": "nospace",
                "index-signature": "nospace",
                "parameter": "nospace",
                "property-declaration": "nospace",
                "variable-declaration": "nospace"
            }
        ],
        "use-host-property-decorator": true,
        "use-input-property-decorator": true,
        "use-isnan": true,
        "use-life-cycle-interface": true,
        "use-output-property-decorator": true,
        "use-pipe-transform-interface": true,
        "variable-name": [
            true,
            "allow-leading-underscore",
            "allow-pascal-case",
            "ban-keywords",
            "check-format"
        ],
        "whitespace": [
            true,
            "check-branch",
            "check-decl",
            "check-module",
            "check-operator",
            "check-separator",
            "check-type"
        ]
    }
}
